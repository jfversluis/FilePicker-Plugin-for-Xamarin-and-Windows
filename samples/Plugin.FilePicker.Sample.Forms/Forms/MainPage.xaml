<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Plugin.FilePicker.Sample.Forms"
    x:Class="Plugin.FilePicker.Sample.Forms.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Pick file" Clicked="PickFile_Clicked" />
            <Button Text="Pick image" Clicked="PickImage_Clicked" />
            <Button Text="Save some text" Clicked="SaveSomeText_Clicked" />
        </StackLayout>
        <Label x:Name="FileNameLabel" Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="FilePathLabel" Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <Image x:Name="FileImagePreview" VerticalOptions="Center" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>